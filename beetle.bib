@article{kampfCaseOpenWater2020,
  title = {The {{Case}} for an {{Open Water Balance}}: {{Re-envisioning Network Design}} and {{Data Analysis}} for a {{Complex}}, {{Uncertain World}}},
  shorttitle = {The {{Case}} for an {{Open Water Balance}}},
  author = {Kampf, Stephanie K. and Burges, Stephen J. and Hammond, John C. and Bhaskar, Aditi and Covino, Tim P. and Eurich, Abby and Harrison, Hannah and Lefsky, Michael and Martin, Caroline and McGrath, Daniel and Puntenney-Desmond, Kira and Willi, Kathryn},
  date = {2020},
  journaltitle = {Water Resources Research},
