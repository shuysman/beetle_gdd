@article{siblyPopulationGrowthRate2002,
  title = {Population Growth Rate and Its Determinants: An Overview},
  shorttitle = {Population Growth Rate and Its Determinants},
  author = {Sibly, Richard M. and Hone, Jim},
  editor = {Sibly, R. M. and Hone, J. and Clutton–Brock, T. H.},
  date = {2002-09-29},
