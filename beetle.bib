@article{carniceroPostglacialRangeExpansion2022,
  title = {Postglacial Range Expansion of High-Elevation Plants Is Restricted by Dispersal Ability and Habitat Specialization},
  author = {Carnicero, Pau and Wessely, Johannes and Moser, Dietmar and Font, Xavier and Dullinger, Stefan and Schönswetter, Peter},
