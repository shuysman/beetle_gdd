@article{katulStochasticDynamicsPlantWater2007,
  title = {Stochastic {{Dynamics}} of {{Plant-Water Interactions}}},
  author = {Katul, Gabriel and Porporato, Amilcare and Oren, Ram},
  date = {2007-12-01},
  journaltitle = {Annual Review of Ecology, Evolution, and Systematics},
