@article{salaMastingWhitebarkPine2012,
  title = {Masting in Whitebark Pine ({{Pinus}} Albicaulis) Depletes Stored Nutrients},
  author = {Sala, Anna and Hopping, Kelly and McIntire, Eliot J. B. and Delzon, Sylvain and Crone, Elizabeth E.},
