@article{taguePlantAccessibleWater2019,
  title = {Plant {{Accessible Water Storage Capacity}} and {{Tree-Scale Root Interactions Determine How Forest Density Reductions Alter Forest Water Use}} and {{Productivity}}},
  author = {Tague, Christina L. and Moritz, Max A.},
  date = {2019},
