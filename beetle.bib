@thesis{itterDevelopmentApplicationSpatioTemporal,
  type = {phdthesis},
  title = {The {{Development}} and {{Application}} of {{Spatio-Temporal Methods}} to {{Understand}} and {{Predict Broad-Scale Patterns}} of {{Forest Change}}},
  author = {Itter, Malcolm S.},
  institution = {{Michigan State University}},
